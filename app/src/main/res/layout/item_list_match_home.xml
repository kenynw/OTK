<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_match_home_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="OTK炉石传说元旦跨年超值赛事"
            />

        <TextView
            android:id="@+id/tv_match_home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="今日19：14"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:id="@+id/tv_match_home_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextTitle"
            tools:text="57000撒币"
            />

        <TextView
            android:id="@+id/tv_match_home_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="正在进行"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_match_home_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_star"
            android:textAppearance="@style/TextTitle"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dv_match_home_game_icon"
            style="@style/TinyAvatar"
            tools:text="正在进行"
            />

    </LinearLayout>

</LinearLayout>