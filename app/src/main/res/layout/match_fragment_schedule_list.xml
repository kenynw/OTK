<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/widget_medium_height"
    android:paddingTop="@dimen/vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_schedule_left"
            android:layout_width="@dimen/widget_medium_height"
            android:layout_height="@dimen/widget_medium_height"
            android:scaleType="center"
            android:src="@mipmap/ic_left_arrow"
            />

        <TextView
            android:id="@+id/tv_schedule_round"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/TextTitle"
            android:textStyle="bold"
            tools:text="第一轮"
            />

        <ImageView
            android:id="@+id/iv_schedule_right"
            android:layout_width="@dimen/widget_medium_height"
            android:layout_height="@dimen/widget_medium_height"
            android:scaleType="center"
            android:src="@mipmap/ic_right_arrow"
            />

    </LinearLayout>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"/>

</LinearLayout>