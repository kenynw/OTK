<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dv_news_thumb"
        android:layout_width="100dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        app:actualImageScaleType="centerCrop"
        app:placeholderImage="@mipmap/def_image_loading"
        app:placeholderImageScaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/dv_news_thumb"
        android:paddingBottom="4dp"
        android:textAppearance="@style/TextCaption"
        tools:text="2016.11.20"/>

    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/dv_news_thumb"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingTop="4dp"
        android:textAppearance="@style/TextTitle"
        android:textStyle="bold"
        tools:text="这是标题这是标题这是标题这是标题这是标题这是标题这是标题"/>

</RelativeLayout>