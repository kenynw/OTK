<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/include_battle_operation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_small_height"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_battling_opponent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_body_material"
            android:textStyle="bold"
            tools:text="对手游戏账号：机智的黄图哥#1234"
            />

        <Button
            android:id="@+id/btn_pick_copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="@string/btn_copy"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_body_material"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_battling_judge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_battle_contact"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/ic_battle_contact"
                android:gravity="center_vertical"
                android:text="@string/btn_battle_contact"
                android:textColor="@color/textBody"
                android:textSize="@dimen/text_size_caption_material"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_battling_screenshot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_battle_screenshot"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/ic_battle_screenshot"
                android:gravity="center_vertical"
                android:text="@string/btn_battle_screenshot"
                android:textColor="@color/textBody"
                android:textSize="@dimen/text_size_caption_material"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_battling_chatroom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_battle_chat"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/ic_battle_chat"
                android:gravity="center_vertical"
                android:text="@string/btn_battle_chat_qq"
                android:textColor="@color/textBody"
                android:textSize="@dimen/text_size_caption_material"
                />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>