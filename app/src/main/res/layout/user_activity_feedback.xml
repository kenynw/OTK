<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.user.FeedbackActivity">

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_feedback_type"
            />

        <Spinner
            android:id="@+id/spinner_feedback_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/spinner_feedback_type"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_contact"
            />

        <EditText
            android:id="@+id/et_feedback_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/hint_feedback_contact"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="@dimen/horizontal_margin"
            android:textColor="@color/text_black_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/text_size_body_material"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/et_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:gravity="left"
        android:hint="@string/hint_feedback_content"
        android:inputType="textMultiLine"
        android:maxEms="140"
        android:padding="@dimen/vertical_margin"
        android:textColor="@color/text_black_primary"
        android:textColorHint="@color/text_hint"
        android:textSize="@dimen/text_size_body_material"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/label_upload_image"
            />

        <com.jude.exgridview.PieceViewGroup
            android:id="@+id/pv_feedback_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_feedback_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_margin"
        android:text="@string/btn_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_subhead_material"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:text="@string/text_feedback_wb"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:text="@string/text_feedback_qq"
            android:textColor="@color/text_black_secondary"
            android:textSize="@dimen/text_size_body_material"
            />

    </LinearLayout>

</LinearLayout>