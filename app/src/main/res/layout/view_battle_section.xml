<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingEnd="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="20dp"
    android:paddingStart="15dp"
    android:paddingTop="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_battle_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/indicator_primary_dark_label"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/indicator_primary_dark_label"
            android:gravity="center_vertical"
            android:text="@string/text_prepare_phase"
            android:textAppearance="@style/TextSubhead"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_battle_status_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextCaption"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_caption_material"
            android:visibility="gone"
            tools:text="@string/text_ban_notice"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_battle_status_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/text_ready_desc"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_size_body_material"
        />

</LinearLayout>