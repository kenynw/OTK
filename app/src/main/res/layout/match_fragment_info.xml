<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/div_gray"
        android:dividerPadding="@dimen/horizontal_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/widget_medium_height"
        android:showDividers="middle"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/text_match_bonus"
            android:textAppearance="@style/TextSubhead"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/horizontal_margin"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="总奖金"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="￥65468499848"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/horizontal_margin"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="冠军独享"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="￥5000000"
                    />
            </TableRow>

        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_margin"/>

        <TextView
            android:id="@+id/tv_match_info_donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/text_match_support"
            android:textAppearance="@style/TextSubhead"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/app_name"
            android:textAppearance="@style/TextBody"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/text_detail_info"
            android:textAppearance="@style/TextSubhead"
            />

        <TextView
            android:id="@+id/tv_match_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/horizontal_margin"
            android:textAppearance="@style/TextBody"
            tools:text="这里面是详情介绍内容介绍内容介绍内容介绍内容"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/vertical_margin"/>

        <Button
            android:id="@+id/btn_match_enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="@dimen/horizontal_margin"
            tools:text="@string/btn_enroll_list"
            android:textAppearance="@style/TextBody"
            />

        <Button
            android:id="@+id/btn_match_bench"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="@dimen/horizontal_margin"
            tools:text="@string/btn_bench_list"
            android:textAppearance="@style/TextBody"
            />

        <Button
            android:id="@+id/btn_match_qq_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="@dimen/horizontal_margin"
            android:text="@string/btn_join_qq_group"
            android:textAppearance="@style/TextBody"
            />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_medium_height"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>