<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_activity_against"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.miguan.otk.module.battle.BattleActivity">

    <include layout="@layout/include_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include layout="@layout/include_batting_header"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_small_height"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_battle_a_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_body_material"
                    android:textStyle="bold"
                    tools:text="准备倒计时00:05:51"
                    />

                <TextView
                    android:id="@+id/tv_battle_b_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_body_material"
                    android:textStyle="bold"
                    tools:text="准备倒计时00:05:51"
                    />

            </LinearLayout>

            <include
                android:id="@+id/include_battle_operation"
                layout="@layout/include_battle_operation"/>

            <com.miguan.otk.widget.SectionView
                android:id="@+id/section_battle_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.jude.exgridview.ExGridView
                android:id="@+id/grid_battling_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="88dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:grid_column="5"
                app:grid_divider_horizontal="24dp"
                app:grid_divider_vertical="24dp"
                />

            <include layout="@layout/include_battling_ongoing"/>

            <FrameLayout
                android:id="@+id/container_battle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_battle_status_save"
        style="@style/ButtonBattle"
        tools:text="准备"
        />

    <LinearLayout
        android:id="@+id/ly_battling_submit_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/btn_battling_im_win"
            style="@style/ButtonBattle"
            android:layout_width="0dp"
            android:layout_height="@dimen/widget_medium_height"
            android:layout_weight="1"
            android:text="@string/btn_i_win"
            />

        <Button
            android:id="@+id/btn_battling_im_lost"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/btn_i_lost"
            android:textColor="@color/textBody"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>
