<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/div_gray"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:showDividers="middle"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <Button
                android:id="@+id/btn_mine_sign_in"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="@string/btn_sign_in"
                />

            <LinearLayout
                android:id="@+id/layout_mine_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_mine_sign_in"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/dv_mine_avatar"
                    style="@style/MediumAvatar"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    />

                <Button
                    android:id="@+id/btn_mine_login"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_login"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextSubhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/ic_more"
                        tools:text="OTK\nUID:54655"
                        android:text="OTK\nUID:54655"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:orientation="horizontal"
                        >

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_my_balance"
                            tools:text="我的撒币：5499"
                            />

                        <TextView
                            style="@style/TextBody"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_my_coin"
                            tools:text="我的元宝：5499"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/div_gray"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <Button
                android:id="@+id/btn_mine_store"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_launcher"
                android:text="@string/btn_shop"
                android:textAppearance="@style/TextSubhead"
                />

            <Button
                android:id="@+id/btn_mine_my_match"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_launcher"
                android:text="@string/btn_my_match"
                android:textAppearance="@style/TextBody"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_balance_detail"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/btn_balance_detail"/>

        <Button
            android:id="@+id/btn_take_cash_record"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/btn_take_cash_record"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"/>

        <Button
            android:id="@+id/btn_my_order"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/btn_my_order"/>

        <Button
            android:id="@+id/btn_game_account"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/btn_game_account"/>

        <Button
            android:id="@+id/btn_address"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/btn_address"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"/>

        <Button
            android:id="@+id/btn_mine_settings"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/btn_settings"/>

        <Button
            android:id="@+id/btn_mine_feedback"
            style="@style/TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_more"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="@string/btn_feedback"/>

    </LinearLayout>

</ScrollView>