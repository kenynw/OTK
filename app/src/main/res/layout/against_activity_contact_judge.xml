<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/against_activity_contact_judge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.miguan.otk.module.battle.ContactJudgeActivity">

    <include layout="@layout/include_toolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_contact_judge"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_margin"/>

    <TextView
        android:id="@+id/tv_judge_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_avatar_judge"
        android:drawablePadding="8dp"
        android:drawableRight="@mipmap/ic_more"
        android:gravity="center_vertical"
        android:padding="@dimen/horizontal_margin"
        android:text="@string/text_judge_qq"
        android:textColor="#444"
        android:textSize="@dimen/text_size_body_material"
        />

    <TextView
        android:id="@+id/tv_judge_qq_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:drawableLeft="@mipmap/ic_hearth_stone_contact_judge"
        android:drawablePadding="8dp"
        android:drawableRight="@mipmap/ic_more"
        android:gravity="center_vertical"
        android:padding="@dimen/horizontal_margin"
        android:text="@string/text_match_qq_group"
        android:textColor="#444"
        android:textSize="@dimen/text_size_body_material"
        />

</LinearLayout>
