<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/horizontal_margin"
    >

    <TextView
        android:id="@+id/tv_dialog_enter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/btn_withdraw"
        android:textAppearance="@style/TextSubhead"
        />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_dialog_enter_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_medium_height"
        android:layout_margin="@dimen/vertical_margin"
        android:background="@drawable/stroke_gray_shape"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/stroke_gray_shape"
            android:text="@string/btn_ok"
            />

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/stroke_gray_shape"
            android:text="@string/btn_cancel"
            />

    </LinearLayout>

</LinearLayout>