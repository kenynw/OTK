<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/div_gray"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.miguan.otk.module.match.MatchDetailActivity">

    <include layout="@layout/include_toolbar"/>

    <com.miguan.otk.widget.StickyNavLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/id_stickynavlayout_topview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="木子姐姐建的自定义常规赛（联系QQ群：0592110）"
                android:textAppearance="@style/TextSubhead"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_tiny_height"
                android:background="@color/white"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/label_match_id"
                android:textAppearance="@style/TextCaption"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/label_match_state"
                android:textAppearance="@style/TextBody"
                />

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/id_stickynavlayout_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/textSecondary"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/id_stickynavlayout_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.miguan.otk.widget.StickyNavLayout>

</LinearLayout>
