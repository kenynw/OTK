<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:divider="@drawable/div_gray"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:paddingTop="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_deck_selection_screen_1"
            android:textAppearance="@style/TextBody"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_shot_deck_select_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_small_height"
            android:background="@drawable/btn_stroke_primary_dark_radius_selector"
            android:text="@string/btn_upload_screenshot"
            android:textColor="@color/text_color_primarydark2secondary"
            android:textSize="@dimen/text_size_body_material"
            android:tag="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:paddingTop="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_deck_selection_screen_2"
            android:textAppearance="@style/TextBody"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_shot_deck_select_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_small_height"
            android:background="@drawable/btn_stroke_primary_dark_radius_selector"
            android:text="@string/btn_upload_screenshot"
            android:textColor="@color/text_color_primarydark2secondary"
            android:textSize="@dimen/text_size_body_material"
            android:tag="2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:paddingTop="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_screenshot_round_one"
            android:textAppearance="@style/TextBody"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_shot_round_one"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_small_height"
            android:background="@drawable/btn_stroke_primary_dark_radius_selector"
            android:text="@string/btn_upload_screenshot"
            android:textColor="@color/text_color_primarydark2secondary"
            android:textSize="@dimen/text_size_body_material"
            android:tag="3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:paddingTop="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_screenshot_round_two"
            android:textAppearance="@style/TextBody"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_shot_round_two"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_small_height"
            android:background="@drawable/btn_stroke_primary_dark_radius_selector"
            android:text="@string/btn_upload_screenshot"
            android:textColor="@color/text_color_primarydark2secondary"
            android:textSize="@dimen/text_size_body_material"
            android:tag="4"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"
        android:paddingTop="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_screenshot_round_third"
            android:textAppearance="@style/TextBody"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_shot_round_third"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_small_height"
            android:background="@drawable/btn_stroke_primary_dark_radius_selector"
            android:text="@string/btn_upload_screenshot"
            android:textColor="@color/text_color_primarydark2secondary"
            android:textSize="@dimen/text_size_body_material"
            android:tag="5"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_warning"
        android:padding="@dimen/horizontal_margin"
        android:text="@string/btn_eg_screenshot"
        android:drawablePadding="8dp"
        android:textAppearance="@style/TextCaption"/>

</LinearLayout>