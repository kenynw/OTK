<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/textSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bgWindow</item>
        <item name="actionBarSize">56dp</item>
        <item name="android:textColorPrimary">@color/textBody</item>
        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->
        <!--<item name="android:dropDownListViewStyle">@style/DropDownListView</item>-->
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="DividerAppTheme" parent="AppTheme.Base">
        <item name="android:listDivider">@drawable/divider_space_shape</item>
    </style>

    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title"/>

    <style name="TextSubhead" parent="TextAppearance.AppCompat.Subhead"/>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textBody</item>
    </style>

    <style name="TextCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TitleToolbar" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/bgActionBar</item>
        <item name="com.miguan.otk:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="com.miguan.otk:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="TabText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_body_material</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">@dimen/widget_medium_height</item>
        <item name="android:layout_height">@dimen/widget_medium_height</item>
        <item name="com.miguan.otk:roundAsCircle">true</item>
        <item name="com.miguan.otk:actualImageScaleType">centerCrop</item>
        <item name="com.miguan.otk:placeholderImageScaleType">centerCrop</item>
        <item name="com.miguan.otk:placeholderImage">@mipmap/def_image_loading</item>
    </style>

    <style name="TinyAvatar" parent="Avatar">
        <item name="android:layout_width">@dimen/widget_tiny_height</item>
        <item name="android:layout_height">@dimen/widget_tiny_height</item>
    </style>

    <style name="LargeAvatar" parent="Avatar">
        <item name="android:layout_width">@dimen/widget_max_height</item>
        <item name="android:layout_height">@dimen/widget_max_height</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UserEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_medium_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">@dimen/horizontal_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_margin</item>
        <item name="android:textAppearance">@style/TextBody</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ButtonBattle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_medium_height</item>
        <item name="android:background">@drawable/btn_primary2white_selector</item>
        <item name="android:textColor">@color/text_color_white2primary</item>
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
